{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/core/domain/*"],
      "@application/*": ["src/core/application/*"],
      "@shell/*": ["src/shell/*"],
      "@ui/*": ["src/ui/*"],
      "@content/*": ["src/content/*"]
    }
  }
}
