{
  "name": "lite-ts",
  "version": "1.0.0",
  "description": "Static website catalog of agentic coding patterns",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:arch": "vitest run tests/architecture/",
    "lint": "eslint --no-error-on-unmatched-pattern 'src/**/*.{ts,tsx}' 'tests/**/*.ts'",
    "typecheck": "astro check && tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx,astro}' 'tests/**/*.ts'",
    "prepare": "husky"
  },
  "keywords": [
    "agentic",
    "patterns",
    "catalog"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@astrojs/preact": "^4.1.3",
    "astro": "^5.17.3",
    "preact": "^10.28.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "archunit": "^2.1.63",
    "eslint": "^10.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.astro": [
      "prettier --write"
    ]
  }
}
