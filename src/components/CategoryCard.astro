---
interface Props {
  name: string;
  slug: string;
  description: string;
  patternCount: number;
}

const { name, slug, description, patternCount } = Astro.props;
---

<a href={`/lite-ts/categories/${slug}/`} class="category-card">
  <h3>{name}</h3>
  <p class="description">{description}</p>
  <span class="count">{patternCount} pattern{patternCount !== 1 ? 's' : ''}</span>
</a>

<style>
  .category-card {
    display: block;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: var(--spacing-lg);
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .category-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 2px 8px rgba(99, 102, 241, 0.1);
  }

  h3 { margin-bottom: var(--spacing-sm); color: var(--color-primary); }

  .description {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-md);
  }

  .count {
    font-size: 0.8rem;
    color: var(--color-tag-text);
    background: var(--color-tag-bg);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: 4px;
  }
</style>
